<div class="row">
  <div class="col-auto">
    <h2 id="profile-heads">Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3 id="profile-heads">Create a Blog Post:</h3>

    <form class="form" id="new-posts-form">
      <div class="form-group">
        <label for="posts-title" id="profile-label">blog title:</label>
        <input class="form-input" type="text" id="posts-title" title="posts-title" />
      </div>
      
      <div class="form-group">
        <label for="posts-desc" id="profile-label">description:</label>
        <textarea class="form-input" id="posts-desc" title="posts-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6" id="posts-list">
    <h3 id="profile-heads">Current Projects:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
        <button class="btn btn-sm btn-info" data-id="{{post.id}}">EDIT</button>

      </div>
      
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
