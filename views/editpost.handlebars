<div class="row">
  <div class="col-md-6" id="editPost">


    <h2 id="post-title">{{title}}</h2>
    <h4 class="edit-headers">Enter new title here:</h3>
    <textarea class="form-input" type="text" name="title" id="title" title="posts-title" value={{title}}>{{title}}</textarea>
    <br>
    <h4 class="edit-headers">Enter new blog post here:</h3>
    <textarea class="form-input" type="text" name="title" id="description" value={{description}}>{{description}}</textarea>

    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <p>
    </p>
    {{#if logged_in}}
    <form class="add-comment-form form" data-id={{id}}>
      <div class="form-group">
        {{!-- <label for="body" id="posts-label">Any Thoughts? Add your comments here:</label>
        <input class="form-input" type="text" name="body" id="comment-body"> --}}
      </div>
      <div class="form-group">

              <button type="submit" class="btn btn-primary">Submit!</button>

      </div>
    </form>
    {{/if}}
  </div>
  <div class="col-md-6">

    {{#each comments as |comment|}}
      <p>{{comment.body}} - {{comment.user.name}}</p>
      <br>
    {{/each}}

  </div>
</div>
<script src="/js/editPost.js"></script>
